<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<property name="M_PI" value="3.1415926535897931" />

  <xacro:macro name="wam_j4" params="parent">

    <link name="wam_l4">
        <inertial>
            <mass value="0.52" />
            <origin xyz="-0.045 -0.15 0" rpy="0 0 0" />
            <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="0.1"  iyz="0.0"  izz="0.1" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <geometry name="wam_l4_visual">
                <mesh filename="package://wam_description/meshes/link_j4.stl" scale="1.0 1.0 1.0" />
            </geometry>
            <material name="Grey" >
                <color rgba="0.75 0.75 0.75 1.0"/>
            </material>
        </visual>
        <collision>
           <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
             <geometry name="wam_l4_collision">
               <mesh filename="package://wam_description/meshes/link_j4.stl" scale="1.0 1.0 1.0" />
            </geometry>
            <contact_coefficients kd="1.0" kp="1000.0" mu="0"/>
        </collision>
    </link>

    <gazebo reference="wam_l4">
        <material>Gazebo/Grey</material>
        <selfCollide>true</selfCollide>
    </gazebo>

    <joint name="wam_j4" type="revolute">
        <parent link="${parent}"/>
        <child link="wam_l4"/>
        <origin xyz="0.045 0.0 0.55" rpy="-${M_PI/2} 0 0" />
        <axis xyz="0 0 1" />
        <limit lower="-0.9" upper="2.8" effort="35" velocity="2.0"/> 
	<dynamics damping="100"/>
    </joint>

    <transmission name="wam_j4_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="j4_motor">
        <mechanicalReduction>1</mechanicalReduction>
        <motorTorqueConstant>1</motorTorqueConstant>
      </actuator>
      <joint name="wam_j4">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>

  </xacro:macro>

</robot>
